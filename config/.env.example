# Database
ASH_DATABASE_URL="postgresql://username:password@localhost:5432/ash_ai"

# Authentication
ASH_NEXTAUTH_SECRET="your-nextauth-secret-here"
ASH_NEXTAUTH_URL="http://localhost:3000"
ASH_JWT_SECRET="your-jwt-secret-here"

# AI/ML
ASH_OPENAI_API_KEY="your-openai-api-key-here"

# Payments
ASH_STRIPE_PUBLIC_KEY="pk_test_..."
ASH_STRIPE_SECRET_KEY="sk_test_..."
ASH_PAYMONGO_PUBLIC_KEY="pk_test_..."
ASH_PAYMONGO_SECRET_KEY="sk_test_..."

# Storage
ASH_S3_BUCKET="ash-ai-storage"
ASH_S3_REGION="ap-southeast-1"
ASH_S3_ACCESS_KEY="your-s3-access-key"
ASH_S3_SECRET_KEY="your-s3-secret-key"

# Redis (for queues and caching)
ASH_REDIS_URL="redis://localhost:6379"

# Email
ASH_SMTP_HOST="smtp.gmail.com"
ASH_SMTP_PORT="587"
ASH_SMTP_USER="your-email@gmail.com"
ASH_SMTP_PASS="your-email-password"

# SMS
ASH_TWILIO_SID="your-twilio-sid"
ASH_TWILIO_TOKEN="your-twilio-token"

# Application
ASH_APP_URL="http://localhost:3000"
ASH_ENCRYPTION_KEY="your-32-char-encryption-key-here"

# Feature Flags
ASH_ENABLE_2FA="true"
ASH_ENABLE_AI_FEATURES="true"
ASH_ENABLE_OFFLINE_PWA="true"