# ==========================================
# ASH AI ERP - Development Environment Configuration
# ==========================================

# Database Configuration
DATABASE_URL="file:./ash_ai_dev.db"
ASH_DATABASE_URL="file:./ash_ai_dev.db"

# Development Database Pool Settings (Optional for SQLite)
DB_POOL_MAX_CONNECTIONS="10"
DB_POOL_MIN_CONNECTIONS="2"
DB_IDLE_TIMEOUT="30000"
DB_CONNECT_TIMEOUT="10000"

# Redis Cache Configuration (Development)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Authentication
ASH_NEXTAUTH_SECRET="dev-nextauth-secret-change-in-production"
ASH_NEXTAUTH_URL="http://localhost:3000"
ASH_JWT_SECRET="dev-jwt-secret-change-in-production"

# AI/ML
ASH_OPENAI_API_KEY="your-openai-api-key-here"

# Payments (Test Keys)
ASH_STRIPE_PUBLIC_KEY="pk_test_..."
ASH_STRIPE_SECRET_KEY="sk_test_..."
ASH_PAYMONGO_PUBLIC_KEY="pk_test_..."
ASH_PAYMONGO_SECRET_KEY="sk_test_..."

# Storage (Development)
ASH_S3_BUCKET="ash-ai-dev-storage"
ASH_S3_REGION="ap-southeast-1"
ASH_S3_ACCESS_KEY="your-dev-s3-access-key"
ASH_S3_SECRET_KEY="your-dev-s3-secret-key"

# Email (Development)
ASH_SMTP_HOST="smtp.gmail.com"
ASH_SMTP_PORT="587"
ASH_SMTP_USER="your-dev-email@gmail.com"
ASH_SMTP_PASS="your-dev-email-password"

# SMS (Development)
ASH_TWILIO_SID="your-dev-twilio-sid"
ASH_TWILIO_TOKEN="your-dev-twilio-token"

# Application
ASH_APP_URL="http://localhost:3000"
ASH_ENCRYPTION_KEY="dev-32-char-encryption-key-here!!"

# ==========================================
# BACKUP SYSTEM CONFIGURATION (Development)
# ==========================================

BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS="3"
BACKUP_COMPRESS="false"
ENCRYPT_BACKUPS="false"
BACKUP_NOTIFICATIONS="false"

# Cloud Backup (Disabled in Development)
CLOUD_BACKUP_ENABLED="false"
AWS_BACKUP_BUCKET=""
CLOUD_BACKUP_RETENTION_DAYS="7"

# ==========================================
# MONITORING (Development)
# ==========================================

MONITORING_ENABLED="false"
LOG_LEVEL="debug"
HEALTH_CHECK_INTERVAL="60"

# ==========================================
# FEATURE FLAGS (Development)
# ==========================================

ASH_ENABLE_2FA="true"
ASH_ENABLE_AI_FEATURES="true"
ASH_ENABLE_OFFLINE_PWA="true"
ASH_ENABLE_ANALYTICS="false"
ASH_ENABLE_REAL_TIME="true"

# ==========================================
# DEVELOPMENT SPECIFIC
# ==========================================

NODE_ENV="development"
DEBUG="ash:*"
VERBOSE_LOGGING="true"